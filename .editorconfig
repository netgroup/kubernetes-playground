# EditorConfig
# See https://EditorConfig.org for more information

# Unix-style newlines at the bottom of every file
[*]
end_of_line = lf
charset = utf-8

# Tab indentation
indent_style = space
indent_size = 4

# Make sure every file has a blank line at the end
insert_final_newline = true

# Remove any whitespace characters preceding newline characters
trim_trailing_whitespace = true

# Give operators breathing room, but not brackets
spaces_around_operators = true
spaces_around_brackets = false

[*.{ansible-lint,dockerfilelintrc,ecrc,json,json.j2,rb,toml,yml,yml.j2,yaml,yaml.j2}]
indent_style = space
indent_size = 2

[{Vagrantfile,Gemfile.lock}]
indent_style = space
indent_size = 2
